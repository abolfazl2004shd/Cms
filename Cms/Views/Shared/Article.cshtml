@using Cms.Data.Services
@model Article
@inject IArticleCommentService ArticleCommentService

<article class="col-12 col-md-6 tm-post">
    <hr class="tm-hr-primary">
    <a asp-area="" asp-controller="Article" asp-action="Details" asp-route-id="@Model.ArticleId" class="effect-lily tm-post-link tm-pt-60">
        <div class="tm-post-link-inner">
            <img src="~/Images/img-0@(@Model.ArticleId).jpg" alt="Image" class="img-fluid">
        </div>
        <span class="position-absolute tm-new-badge">New</span>
        <h2 class="tm-pt-30 tm-color-primary tm-post-title">@Model.Title</h2>
    </a>
    <p class="tm-pt-30">
        @Model.ShortDescription
    </p>
    <div class="d-flex justify-content-between tm-pt-45">
        <span class="tm-color-primary">Travel . Events</span>
        <span class="tm-color-primary">@Model.RegistrationDate.Format()</span>
    </div>
    <hr>
    <div class="d-flex justify-content-between">
        <span>@ArticleCommentService.NumberOfComments(@Model.ArticleId) comments</span>
        <span>by Admin Nat</span>
    </div>
</article>